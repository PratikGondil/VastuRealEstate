<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <variable
            name="loanViewModel"
            type="com.vastu.realestate.appModule.dashboard.viewmodel.LoanViewModel" />
        <variable
            name="drawerViewModel"
            type="com.vastu.realestate.appModule.dashboard.viewmodel.DrawerViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".appModule.dashboard.view.LoanFragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <include
                layout="@layout/toolbar_layout"
                bind:drawerViewModel="@{drawerViewModel}" />

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/image_slider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/banner_image_height"
                app:iss_auto_cycle="true"
                app:iss_selected_dot="@drawable/default_selected_dot"
                app:iss_unselected_dot="@drawable/default_unselected_dot"
                app:iss_period="1000"
                app:iss_delay="0" />

            <LinearLayout
                android:id="@+id/personal_loan_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:gravity="center"
                android:layout_margin="@dimen/margin_small"
                android:layout_gravity="center_horizontal|center_vertical"
                android:padding="@dimen/padding_small"
                android:background="@drawable/itemview_background"
                android:orientation="horizontal">
                
                <ImageView
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:scaleType="fitCenter"
                    android:layout_height="@dimen/dimen50dp"
                    android:src="@drawable/personal_loan"/>
                <View
                    android:layout_width="1dp"
                    android:layout_weight="0.0001"
                    android:layout_height="@dimen/dimen50dp"
                    android:background="@color/ruler_color"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:gravity="center"
                    app:fontFamily="@font/poppins_medium"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/text_color"
                    android:text="@string/personal_loan"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/home_loan_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:gravity="center"
                android:layout_margin="@dimen/margin_small"
                android:layout_gravity="center_horizontal|center_vertical"
                android:padding="@dimen/padding_small"
                android:background="@drawable/itemview_background"
                android:orientation="horizontal">

                <ImageView
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:scaleType="fitCenter"
                    android:layout_height="@dimen/dimen50dp"
                    android:src="@drawable/home_loan"/>
                <View
                    android:layout_width="1dp"
                    android:layout_weight="0.0001"
                    android:layout_height="@dimen/dimen50dp"
                    android:background="@color/ruler_color"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:gravity="center"
                    app:fontFamily="@font/poppins_medium"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/text_color"
                    android:text="@string/home_loan"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/car_loan_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:gravity="center"
                android:layout_margin="@dimen/margin_small"
                android:layout_gravity="center_horizontal|center_vertical"
                android:padding="@dimen/padding_small"
                android:background="@drawable/itemview_background"
                android:orientation="horizontal">

                <ImageView
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:scaleType="fitCenter"
                    android:layout_height="@dimen/dimen50dp"
                    android:src="@drawable/car_loan"/>
                <View
                    android:layout_width="1dp"
                    android:layout_weight="0.0001"
                    android:layout_height="@dimen/dimen50dp"
                    android:background="@color/ruler_color"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:gravity="center"
                    app:fontFamily="@font/poppins_medium"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/text_color"
                    android:text="@string/car_loan"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>