<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <variable
            name="loanViewModel"
            type="com.vastu.realestate.appModule.dashboard.viewmodel.LoanViewModel" />
        <variable
            name="drawerViewModel"
            type="com.vastu.realestate.appModule.dashboard.viewmodel.DrawerViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".appModule.dashboard.view.LoanFragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <include
                layout="@layout/toolbar_layout"
                bind:drawerViewModel="@{drawerViewModel}" />

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/image_slider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/banner_image_height"
                app:iss_auto_cycle="true"
                app:iss_delay="0"
                app:iss_error_image="@drawable/vastu_logo_splash"
                app:iss_period="1000"
                app:iss_placeholder="@color/loan_background_color"
                app:iss_selected_dot="@drawable/default_selected_dot"
                app:iss_unselected_dot="@drawable/default_unselected_dot" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginStart="@dimen/margin_large"
                android:layout_marginEnd="@dimen/margin_large">

                <LinearLayout
                    android:id="@+id/personal_loan_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:foreground="@drawable/ripple_effect"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin_large"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:padding="@dimen/padding_small"
                    android:clickable="true"
                    android:background="@drawable/itemview_background"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:scaleType="center"
                        android:layout_height="@dimen/dimen50dp"
                        android:src="@drawable/personal_loan"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_weight="0.05"
                        android:layout_height="@dimen/dimen50dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_weight="0.0001"
                        android:layout_height="@dimen/dimen50dp"
                        android:background="@color/ruler_color"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_weight="0.05"
                        android:layout_height="@dimen/dimen50dp" />


                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:gravity="start"
                        app:fontFamily="@font/poppins_medium"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/text_color"
                        android:text="@string/personal_loan"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/home_loan_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:gravity="center"
                    android:foreground="@drawable/ripple_effect"
                    android:clickable="true"
                    android:layout_marginTop="@dimen/margin_large"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:padding="@dimen/padding_small"
                    android:background="@drawable/itemview_background"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:scaleType="center"
                        android:layout_height="@dimen/dimen50dp"
                        android:src="@drawable/home_loan"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_weight="0.05"
                        android:layout_height="@dimen/dimen50dp" />
                    <View
                        android:layout_width="1dp"
                        android:layout_weight="0.0001"
                        android:layout_height="@dimen/dimen50dp"
                        android:background="@color/ruler_color"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_weight="0.05"
                        android:layout_height="@dimen/dimen50dp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:gravity="start"
                        app:fontFamily="@font/poppins_medium"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/text_color"
                        android:text="@string/home_loan"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/car_loan_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:gravity="center"
                    android:foreground="@drawable/ripple_effect"
                    android:clickable="true"
                    android:layout_marginTop="@dimen/margin_large"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:padding="@dimen/padding_small"
                    android:background="@drawable/itemview_background"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:scaleType="center"
                        android:layout_height="@dimen/dimen50dp"
                        android:src="@drawable/car_loan"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_weight="0.05"
                        android:layout_height="@dimen/dimen50dp" />
                    <View
                        android:layout_width="1dp"
                        android:layout_weight="0.0001"
                        android:layout_height="@dimen/dimen50dp"
                        android:background="@color/ruler_color"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_weight="0.05"
                        android:layout_height="@dimen/dimen50dp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:gravity="start"
                        app:fontFamily="@font/poppins_medium"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/text_color"
                        android:text="@string/car_loan"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/floatLoanEnquiry"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_large"
            android:text="@string/loan_enquiry"
            app:fontFamily="@font/poppins_regular"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_small"
            app:icon="@drawable/ic_add"
            app:iconTint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="@{(view)->loanViewModel.onClickAddLoanEnquiry()}" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>