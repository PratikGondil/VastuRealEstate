<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_layout"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/drawer_content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/nav_background">

                <ImageView
                    android:id="@+id/close_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_xxlarge"
                    android:layout_gravity="end|top"
                    android:src="@drawable/ic_close" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/padding_small"
                    android:paddingEnd="@dimen/padding_small"
                    android:paddingBottom="@dimen/padding_small"
                    android:layout_gravity="center_vertical|center_horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/user_profile_imageview"
                        android:padding="@dimen/padding_menu"
                        android:layout_width="@dimen/image_width"
                        android:src="@drawable/ic_user_icon"
                        android:layout_height="@dimen/image_height"
                        android:layout_gravity="center_horizontal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/username_textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            app:fontFamily="@font/poppins_medium"
                            android:textColor="@color/white"
                            android:text="@string/mukul_joshi"
                            android:textSize="@dimen/text_size_semilarge" />

                        <TextView
                            android:id="@+id/mobile_textview"
                            android:layout_marginTop="@dimen/margin_small"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            app:fontFamily="@font/poppins_medium"
                            android:textColor="@color/white"
                            android:text="8956107887"
                            android:textSize="@dimen/text_size_normal" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_enquiry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:gravity="center"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="@dimen/margin_xxlarge">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_contact_us"
                    android:scaleType="centerInside" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:textColor="@color/nav_text_color"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_normal"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/enquiry" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_add_property"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:gravity="center"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="@dimen/margin_xxlarge">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_property"
                    android:scaleType="centerInside" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:textColor="@color/nav_text_color"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_normal"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/add_property" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/nav_contact_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:gravity="center"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="@dimen/margin_xxlarge">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_contact_us"
                    android:scaleType="centerInside" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:textColor="@color/nav_text_color"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_normal"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/contact_us" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:gravity="center"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="@dimen/margin_xxlarge">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_settings"
                    android:scaleType="centerInside" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:textColor="@color/nav_text_color"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_normal"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/settings" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_log_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:gravity="center"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="@dimen/margin_xxlarge">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_logout"
                    android:scaleType="centerInside" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:textColor="@color/nav_text_color"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_normal"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/logout" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>