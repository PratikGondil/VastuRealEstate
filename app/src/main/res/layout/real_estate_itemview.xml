<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="propertyData"
            type="com.vastu.realestatecore.model.response.PropertyData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small">

        <LinearLayout
            android:id="@+id/layoutContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical|center_horizontal"
            android:padding="@dimen/padding_xsmall"
            android:clickable="true"
            android:background="@drawable/real_estate_background"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/property_image"
                    android:layout_width="0dp"
                    android:layout_weight="0.65"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:layout_height="@dimen/image_height"
                    android:scaleType="fitXY"
                    android:src="@{propertyData.propertyThumbnail}"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    app:shapeAppearanceOverlay="@style/image_custom_shape" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.35"
                    android:layout_margin="@dimen/margin_small"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.25"
                        android:layout_height="wrap_content"
                        android:text="@string/featured"
                        android:padding="1dp"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_menu"
                        app:fontFamily="@font/poppins_regular"
                        android:background="@color/feature_color" />

                        <View
                            android:layout_width="0dp"
                            android:layout_weight="0.65"
                            android:layout_height="@dimen/dimen20dp"/>

                    <ImageView
                        android:id="@+id/img_like"
                        android:layout_width="0dp"
                        android:layout_weight="0.1"
                        android:layout_height="wrap_content"
                        android:src="@drawable/un_like"
                        android:layout_gravity="top" />
                </LinearLayout>


                        <TextView
                            android:id="@+id/feature_textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{propertyData.propertyTitle}"
                            android:padding="1dp"
                            android:textSize="@dimen/text_size_small"
                            android:maxLength="35"
                            android:ellipsize="end"
                            android:minLines="1"
                            android:inputType="textCapWords"
                            app:fontFamily="@font/poppins_medium"/>


                    <TextView
                        android:id="@+id/property_prize_textview"
                        android:textColor="@color/black"
                        app:fontFamily="@font/poppins_medium"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/text_size_small"
                        android:maxLength="35"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:inputType="textCapWords"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:id="@+id/property_details_textview"
                        android:textColor="@color/black"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:inputType="textCapWords"
                        android:maxLength="60"
                        app:fontFamily="@font/poppins_regular"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/text_size_xsmall"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:id="@+id/property_address_textview"
                        android:text="@{propertyData.address}"
                        android:textColor="@color/black"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:maxLength="35"
                        android:inputType="textCapWords"
                        android:drawablePadding="@dimen/padding_small"
                        android:drawableStart="@drawable/location"
                        app:fontFamily="@font/poppins_regular"
                        android:includeFontPadding="true"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/text_size_xsmall"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>