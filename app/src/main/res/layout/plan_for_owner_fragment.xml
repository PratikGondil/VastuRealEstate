<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="drawerViewModel"
            type="com.vastu.realestate.appModule.dashboard.viewmodel.DrawerViewModel" />
        <variable
            name="planForOwnerViewModel"
            type="com.vastu.realestate.appModule.ourServies.planForOwner.PlanForOwnerViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/include"
            layout="@layout/toolbar_layout"
            bind:drawerViewModel="@{drawerViewModel}" />
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollview"
            android:layout_below="@+id/include"
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gradient">
        <TextView
            android:id="@+id/txt_title"
            android:fontFamily="@font/open_sans_extra_bold"
            app:fontFamily="@font/open_sans_extra_bold"
            android:textSize="@dimen/dimen_16sp"
            android:textAlignment="viewStart"
            android:layout_margin="@dimen/dimen15dp"
            android:textColor="@color/gray_txt"
            android:text="@string/get_quick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_plans"
                android:layout_below="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                />


            <LinearLayout
                android:id="@+id/llPlans"
                android:layout_width="match_parent"
                android:layout_below="@+id/rv_plans"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="@dimen/dimen10dp"
                android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_xsmall"
                android:layout_margin="@dimen/dimen10dp"
                app:layout_constraintRight_toLeftOf="@+id/txtGstConditions"
                android:id="@+id/txtTermsAndConditions"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Terms and Conditions apply"
                app:fontFamily="@font/open_sans_regular"
                >


            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_xsmall"
                android:textColor="@color/black"
                android:layout_margin="@dimen/dimen10dp"
                android:id="@+id/txtGstConditions"
                app:layout_constraintTop_toBottomOf="@+id/clLayout"
                app:layout_constraintLeft_toRightOf="@+id/txtTermsAndConditions"
                android:text="18% GST applicable"
                app:fontFamily="@font/open_sans_regular"
                >


            </TextView>

            </LinearLayout>
        </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_recyleview"
                    android:layout_marginTop="@dimen/dimen15dp"
                    android:layout_below="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen15dp"
                    android:layout_marginEnd="@dimen/dimen15dp"
                   />

            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSubcribe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_margin="@dimen/dimen15dp"
            android:onClick="@{(view)->planForOwnerViewModel.onClickDialog()}"
            android:text="@string/subscribe"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size18sp"
            android:textStyle="bold"
            app:fontFamily="@font/open_sans_bold"
         />

    </RelativeLayout>
</layout>