<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="OurServiceItemBinding">

        <variable
            name="planDuration"
            type="com.vastu.realestate.appModule.ourServies.planForOwner.bottomSheetRecycler.PlanDuration" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_constraint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_bg"
            android:padding="@dimen/dimen10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/txt_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen15dp"
                android:layout_marginStart="@dimen/dimen5dp"
                android:fontFamily="@font/open_sans_bold"
                android:text="3 months"
                android:textColor="@color/gray_txt"
                android:textSize="@dimen/dimen15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="@dimen/dimen30dp"
                android:layout_height="@dimen/dimen30dp"
                android:layout_marginTop="@dimen/dimen10dp"
                android:layout_marginEnd="@dimen/dimen20dp"
                app:layout_constraintStart_toEndOf="@+id/txt_month"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_gst_amt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen5dp"
                android:layout_marginTop="@dimen/dimen25dp"
                android:fontFamily="@font/open_sans_bold"
                android:textColor="@color/teal_200"
                android:textStyle="bold"
                android:text="₹ 2999/-"
                android:textSize="@dimen/dimens20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radioButton" />

            <TextView
                android:id="@+id/txt_incl_gst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="67dp"
                android:layout_marginLeft="@dimen/dimen5dp"
                android:fontFamily="@font/open_sans_semibold"
                android:text="incl. GST"
                android:textSize="14sp"
                android:textColor="@color/gray_shade"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_gst_amt"
                app:layout_constraintTop_toTopOf="parent"
                 />

            <TextView
                android:id="@+id/txt_amt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen5dp"
                android:fontFamily="@font/open_sans_semibold"
                android:text="₹ 999 /- month"
                android:textColor="@color/gray_shade"
                android:textSize="@dimen/dimen15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_gst_amt" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>