<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="relatedProperty"
            type="com.vastu.propertycore.model.response.RelatedProperty" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <!-- res/layout/item_card.xml -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen10dp"
        android:elevation="5dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dimen15dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_foreground" />

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/text_size18sp"
                android:textStyle="bold"
                android:text="Item Title" />

            <TextView
                android:id="@+id/descriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen10dp"
                android:textSize="@dimen/dimen15sp"
                android:text="Item Description" />



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:maxLength="35"
                        android:minLines="1"
                        android:text="@string/status"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_small"
                        app:fontFamily="@font/open_sans_bold" />




                <TextView
                    android:id="@+id/feature_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:maxLength="35"
                    android:minLines="1"
                    android:text="sjdsjdjddj"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_xsmall"
                    app:fontFamily="@font/open_sans_semibold" />


                <TextView
                    android:id="@+id/property_bhk_dtls_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLength="35"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_xsmall"
                    app:fontFamily="@font/open_sans_semibold" />

            <TextView
                    android:id="@+id/property_address_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLength="60"
                    android:maxLines="1"
                    android:text="jum"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_xsmall"
                    app:fontFamily="@font/poppins_regular" />


                <TextView
                    android:id="@+id/property_prize_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:includeFontPadding="true"
                    android:maxLength="35"
                    android:maxLines="1"
                    android:text="ssxs"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small"
                    app:fontFamily="@font/open_sans_bold" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_small"
                android:background="@color/border_color" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="start"
                    android:maxLength="35"
                    android:minLines="1"
                    android:textAlignment="center"
                    android:text="@string/viewMore"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small"
                    android:background="@color/pinkk"
                    app:fontFamily="@font/open_sans_bold" />
                <ImageView
                    android:id="@+id/img_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="0.9"
                    android:src="@drawable/ic_like" />
            </LinearLayout>
            </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>