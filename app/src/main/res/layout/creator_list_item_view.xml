<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="realCreatorDatum"
            type="com.vastu.realCreator.realCreatorList.model.RealCreatorDatum" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_small">

        <LinearLayout
            android:id="@+id/layoutContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical|center_horizontal"
            android:clickable="true"
            android:layout_margin="@dimen/dimen10dp"
            android:background="@drawable/real_estate_background"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/property_image"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/padding_xsmall"
                    android:layout_weight="0.75"
                    android:background="@drawable/image_view_border"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/margin_small"
                    android:scaleType="fitXY"
                    android:src="@{realCreatorDatum.thumbnail}"
                    app:shapeAppearanceOverlay="@style/image_custom_shape" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small"
                    android:layout_weight="1.25"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:maxLength="35"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@{realCreatorDatum.profileName}"
                            android:textAlignment="textStart"
                            android:textColor="@color/blue_text"
                            android:textSize="@dimen/text_size_normal"
                            app:fontFamily="@font/open_sans_bold" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/feature_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:maxLength="35"
                        android:maxLines="1"
                        android:text="@{realCreatorDatum.address}"
                        android:textColor="@color/blue_text"
                        android:textSize="@dimen/text_size_small"
                        app:fontFamily="@font/open_sans_semibold" />


                    <TextView
                        android:id="@+id/property_bhk_dtls_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLength="35"
                        android:maxLines="1"
                        android:textColor="@color/blue_text"
                        android:textSize="@dimen/text_size_small"
                        app:fontFamily="@font/open_sans_semibold"
                        android:text="@{realCreatorDatum.city}"/>


                    <TextView
                        android:id="@+id/rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLength="60"
                        android:maxLines="1"
                        android:padding="2dp"
                        android:background="@drawable/rating_bg"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_small"
                        app:fontFamily="@font/open_sans_semibold"
                        android:text="@{realCreatorDatum.rating + @string/star}"/>


                    <TextView
                        android:id="@+id/property_prize_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:includeFontPadding="true"
                        android:maxLength="35"
                        android:maxLines="1"
                        android:textColor="@color/blue_text"
                        android:textSize="@dimen/text_size_normal"
                        app:fontFamily="@font/open_sans_bold"
                        android:text="@{realCreatorDatum.name}"/>
                    <TextView
                        android:id="@+id/mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:includeFontPadding="true"
                        android:maxLength="35"
                        android:maxLines="1"
                        android:textColor="@color/blue_text"
                        android:textSize="@dimen/text_size_normal"
                        app:fontFamily="@font/open_sans_bold"
                        android:text="@{realCreatorDatum.mobile}"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@drawable/image_view_border"
            android:padding="@dimen/padding_xsmall"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutContainer"/>

        <com.vastu.realestate.appModule.utils.Player
            android:id="@+id/video"
            android:layout_margin="@dimen/dimen10dp"
            layout="@layout/fragment_video"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="@dimen/padding_xsmall"
            app:layout_constraintTop_toBottomOf="@+id/img_e"/>


        <ImageView
            android:id="@+id/mute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="@dimen/dimen10dp"
            android:layout_marginBottom="@dimen/dimen10dp"
            app:layout_constraintBottom_toBottomOf="@+id/video"
            android:src="@drawable/baseline_volume_off_24"
            >


        </ImageView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>