<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="com.vastu.realestate.appModule.feedback.FeedbackBindingAdapter"/>
        <variable
            name="drawerViewModel"
            type="com.vastu.realestate.appModule.dashboard.viewmodel.DrawerViewModel" />
        <variable
            name="viewPlansViewModel"
            type="com.vastu.realestate.appModule.ourServies.viewPlan.ViewPlansViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/include"
            layout="@layout/toolbar_layout"
            bind:drawerViewModel="@{drawerViewModel}" />
   <TextView
        android:id="@+id/txt_title"
        android:fontFamily="@font/open_sans_extra_bold"
       android:textStyle="bold"
        android:textSize="@dimen/text_size18sp"
        android:textAlignment="viewStart"
        android:layout_margin="@dimen/dimen15dp"
        android:textColor="@color/gray_txt"
        android:text="@string/get_quick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/include"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/dimen5dp"
        android:paddingTop="@dimen/dimen15dp"
        android:paddingEnd="@dimen/dimen5dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_title"
        app:cardElevation="@dimen/dimen10dp"
        app:cardCornerRadius="@dimen/dimen10dp"
        android:elevation="@dimen/dimen10dp"
        app:cardBackgroundColor="@color/pinkk"
        android:layout_margin="@dimen/dimen15dp"
       >

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen15dp"
    >
        <TextView
            android:textStyle="bold"
            android:id="@+id/txt_plan_builder"
            android:textSize="@dimen/text_size18sp"
            android:textAlignment="viewStart"
            android:textColor="@color/button_color"
            android:text="@string/plan_builder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_bold"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/txt_info"
            android:fontFamily="@font/open_sans_regular"
            android:textSize="@dimen/dimen15sp"
            android:letterSpacing="0"
            android:textAlignment="viewStart"
            android:textColor="@color/gray_txt"
            android:text="@string/your_property"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/txt_plan_builder"/>

    <Button
        android:id="@+id/btn_view_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen10dp"
        android:paddingTop="@dimen/dimen10dp"
        android:layout_marginTop="@dimen/dimen20dp"
        android:paddingLeft="@dimen/dimen25dp"
        android:paddingRight="@dimen/dimen25dp"
        android:text="@string/view_plan"
        android:textColor="@color/white"
        android:fontFamily="@font/open_sans_bold"
        android:textSize="@dimen/dimen_16sp"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_info"
    android:onClick="@{view->viewPlansViewModel.onBuilderPlanClick()}"/>
</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/dimen5dp"
            android:paddingTop="@dimen/dimen15dp"
            android:paddingEnd="@dimen/dimen5dp"
            app:layout_constraintTop_toBottomOf="@+id/card1"
            app:cardElevation="@dimen/dimen10dp"
            app:cardCornerRadius="@dimen/dimen10dp"
            android:elevation="@dimen/dimen10dp"
            app:cardBackgroundColor="@color/pinkk"
            android:layout_margin="@dimen/dimen15dp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen15dp"
                >
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/txt_plan_add"
                    android:textSize="@dimen/text_size18sp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/button_color"
                    android:text="@string/plan_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_bold"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/txt_info2"
                    android:fontFamily="@font/open_sans_regular"
                    android:textSize="@dimen/dimen_16sp"
                    android:letterSpacing="0"
                    android:textAlignment="viewStart"
                    android:textColor="@color/gray_txt"
                    android:text="@string/one_of"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/txt_plan_add"/>
                <Button
                    android:id="@+id/btn_view_plan2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen20dp"
                    android:paddingBottom="@dimen/dimen10dp"
                    android:paddingTop="@dimen/dimen10dp"
                    android:paddingLeft="@dimen/dimen25dp"
                    android:paddingRight="@dimen/dimen25dp"
                    android:text="@string/view_plan"
                    android:textColor="@color/white"
                    android:fontFamily="@font/open_sans_bold"
                    android:textSize="@dimen/dimen_16sp"
                    android:textAllCaps="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.9"
                    app:layout_constraintVertical_bias="0.1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_info2"
                android:onClick="@{view->viewPlansViewModel.onAdvertisePlanClick()}"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>