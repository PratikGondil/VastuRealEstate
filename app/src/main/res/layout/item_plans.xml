<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvTipOptOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dimen5dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:cardCornerRadius="@dimen/dimen15dp"
        app:cardElevation="@dimen/dimen10dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.47"
        app:layout_constraintHeight_percent="0.25"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clTipOptOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center"
            android:padding="@dimen/dimen5dp"
            app:layout_constraintHeight_percent="17">
            <!--                        android:onClick="@{(view)->planForOwnerViewModel.onClickDialog()}"-->

            <TextView
                android:id="@+id/txtFirstPlanText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                app:fontFamily="@font/roboto_regular"
                android:gravity="start"
                android:text="Affordable"
                android:paddingStart="@dimen/dimen5dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                app:layout_constraintBottom_toTopOf="@+id/txtFirstPlanPrice"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtFirstPlanPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen10dp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="start"
                android:paddingStart="@dimen/dimen5dp"
                android:paddingEnd="@dimen/dimen30dp"
                android:text="midcap"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                app:fontFamily="@font/roboto_regular"
                app:layout_constraintEnd_toStartOf="@+id/txtFirstPlanCheck"
                app:layout_constraintHorizontal_bias="0.7"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtFirstPlanText" />


            <CheckBox
                style="@style/CustomCheckbox02"
                android:id="@+id/txtFirstPlanCheck"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="@dimen/dimen30dp"
                app:layout_constraintHorizontal_bias="0.3"
                app:layout_constraintStart_toEndOf="@+id/txtFirstPlanPrice"
                app:layout_constraintTop_toBottomOf="@+id/txtFirstPlanText" />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>