<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="offers"
            type="com.vastu.offers.model.response.OfferData" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
        android:id="@+id/border"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

        <RelativeLayout
            android:id="@+id/cvGbpView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/border"
            android:layout_margin="@dimen/dimen15dp"
            android:layout_marginStart="@dimen/dimen5dp"
            android:layout_marginTop="@dimen/dimen5dp"
            android:layout_marginEnd="@dimen/dimen5dp"
            android:layout_marginBottom="@dimen/dimen5dp">

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen10dp"
                android:textColor="@color/brown"
                android:textSize="@dimen/text_size18sp"
                app:fontFamily="@font/roboto_bold" />

            <LinearLayout
                android:id="@+id/llMain"
                android:layout_marginTop="@dimen/dimen5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/offerImage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen300dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/offer_icon" />

            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>
</layout>