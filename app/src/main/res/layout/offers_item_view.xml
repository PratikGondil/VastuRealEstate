<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="offers"
            type="com.vastu.offers.model.response.OfferData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvGbpView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen110dp"
            app:cardCornerRadius="@dimen/dimen20dp"
            android:layout_marginTop="@dimen/dimen20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="@dimen/dimen10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/offer_gradient">

                <ImageView
                    android:id="@+id/offerImage"
                    android:layout_width="@dimen/dimen150dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/offer_icon"
                    android:scaleType="centerInside"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/margin_small" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvProperty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{offers.property}"
                        android:textSize="@dimen/text_size_large"
                        android:textColor="@color/white"
                        app:fontFamily="@font/poppins_bold"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_margin="@dimen/dimen10dp" />

                    <TextView
                        android:id="@+id/tvDiscount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{offers.discount+' '+'%'}"
                        android:textSize="@dimen/text_size_large"
                        android:textColor="@color/white"
                        app:fontFamily="@font/poppins_bold"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_margin="@dimen/dimen10dp" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>