                            android:text="@{propertyData.brochure}"
                            android:textColor="@color/text_color"
                            app:fontFamily="@font/poppins_regular" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/margin_xlarge"
                        android:background="@color/border_color" />

                    <LinearLayout
                        android:id="@+id/descriptionLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/margin_small">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_small"
                            android:text="@string/description"
                            android:textColor="@color/icon_color"
                            app:fontFamily="@font/poppins_semibold" />

                        <TextView
                            android:id="@+id/descriptionTextview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_small"
                            android:layout_marginStart="@dimen/margin_small"
                            android:ellipsize="end"
                            android:minLines="2"
                            android:maxLines="10"
                            android:text="@{propertyData.description}"
                            android:textColor="@color/text_color"
                             app:fontFamily="@font/poppins_regular"  />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:background="@color/border_color" />

                    <LinearLayout
                        android:id="@+id/highlightsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/margin_small">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_small"
                            android:text="@string/highlights"
                            android:textColor="@color/icon_color"
                            app:fontFamily="@font/poppins_semibold" />

                        <TextView
                            android:id="@+id/highlightsTextview"
                            android:layout_width="match_parent"
                            android:layout_marginStart="@dimen/margin_large"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_small"
                            android:ellipsize="end"
                            android:minLines="2"
                            android:maxLines="10"
                            android:textColor="@color/text_color"
                             app:fontFamily="@font/poppins_regular"  />
                        <!--android:text="@{propertyData.highlights}"-->
                    </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/margin_xlarge"
                        android:background="@color/border_color" />

                    <LinearLayout
                        android:id="@+id/chat_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:padding="@dimen/padding_large"
                        android:background="@color/white">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnChat"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/round_button_background"
                            android:text="@string/chat"
                            android:textSize="@dimen/text_size_small"
                            app:fontFamily="@font/poppins_regular"
                            android:textColor="@color/white" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnMakeOffer"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/margin_small"
                            android:background="@drawable/round_button_background"
                            android:text="@string/make_offer"
                            android:textSize="@dimen/text_size_small"
                            app:fontFamily="@font/poppins_regular"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>