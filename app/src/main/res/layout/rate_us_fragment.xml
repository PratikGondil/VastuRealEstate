<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

        <variable
            name="drawerViewModel"
            type="com.vastu.realestate.appModule.dashboard.viewmodel.DrawerViewModel" />
        <variable
            name="rateUsViewModel"
            type="com.vastu.realestate.appModule.rateUs.RateUsViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar_layout"
        bind:drawerViewModel="@{drawerViewModel}" />

    <TextView
        android:id="@+id/txt_are_u"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/include"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/are_you_finding"
        android:fontFamily="@font/open_sans_bold"
        app:fontFamily="@font/open_sans_bold"
        android:textStyle="bold"
        android:textSize="@dimen/dimen22sp"
        android:layout_margin="@dimen/dimen20dp"
        />
    <TextView
        android:id="@+id/txt_plz_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_are_u"
        app:layout_constraintStart_toStartOf="@+id/txt_are_u"
        app:layout_constraintEnd_toEndOf="@+id/txt_are_u"
        android:text="@string/please_share_experience"
        android:fontFamily="@font/open_sans_semibold"
        app:fontFamily="@font/open_sans_semibold"
        android:textStyle="bold"
        android:textSize="@dimen/dimen_16sp"
        android:layout_marginStart="@dimen/dimen20dp"
        />
    <RatingBar
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleIndicator"
        android:progressTint="#FFCC01"
        android:id="@+id/smallRating"
        android:isIndicator="false"
        android:layout_marginTop="@dimen/dimen20dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toBottomOf="@+id/txt_plz_share"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgRate"
        android:layout_marginStart="@dimen/dimen20dp"
        />
    <ImageView
        android:id="@+id/imgRate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen10dp"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toEndOf="@+id/smallRating"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_plz_share"
        android:src="@drawable/ic_rate_"/>
    <TextView
        android:id="@+id/txt_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/smallRating"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/add_detail"
        android:layout_marginStart="@dimen/dimen20dp"
        android:layout_marginTop="@dimen/dimen40dp"
        android:fontFamily="@font/open_sans_bold"
        app:fontFamily="@font/open_sans_bold"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/edt_review"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen150dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_review"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/dimen20dp"
        android:background="@drawable/edt_background"
        android:maxLines="5"
        android:textColorHint="@color/gray_hint"
        android:gravity="top"
        android:padding="@dimen/dimen5dp"
        android:textSize="@dimen/dimen_16sp"
        android:fontFamily="@font/open_sans_bold"
        app:fontFamily="@font/open_sans_bold"
        android:textStyle="bold"
        android:hint="@string/write_here"/>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_small"
        android:text="@string/submit_btn_text"
        android:onClick="@{(view)->rateUsViewModel.submitClick()}"
        android:textColor="@color/white"
        android:layout_margin="@dimen/dimen60dp"
        android:fontFamily="@font/open_sans_bold"
        app:fontFamily="@font/open_sans_bold"
        android:textStyle="bold"
         android:textSize="@dimen/text_size_small"
        app:layout_constraintTop_toBottomOf="@+id/edt_review"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>
</layout>