<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vastuDashboardViewModel"
            type="com.vastu.realestate.appModule.dashboard.viewmodel.VastuDashboardViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".appModule.dashboard.view.VastuDashboardFragment">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="@dimen/margin_xlarge">

                <LinearLayout
                    android:id="@+id/real_estate_layout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:onClick="@{(view)->vastuDashboardViewModel.onClickRealEstate()}"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/dashboard_image_back"
                        android:backgroundTint="@color/real_estate_background_color"
                        android:scaleType="center"
                        android:src="@drawable/real_estate" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/real_estate"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:includeFontPadding="true"
                        app:fontFamily="@font/poppins_regular"
                        android:textSize="@dimen/text_size_normal"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/loan_layout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:onClick="@{(view)->vastuDashboardViewModel.onClickLoan()}"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/loan_background_color"
                    android:background="@drawable/dashboard_image_back"
                    android:src="@drawable/loan"
                    android:scaleType="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/loan"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:includeFontPadding="true"
                    app:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/text_size_normal"/>
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>