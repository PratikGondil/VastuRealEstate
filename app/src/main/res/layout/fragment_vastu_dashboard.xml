<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vastuViewModel"
            type="com.vastu.realestate.appModule.dashboard.viewholder.DashboardViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".appModule.dashboard.view.VastuDashboardFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_height="@dimen/toolbar_height" 
                android:layout_width="match_parent" 
                android:orientation="horizontal"
                android:id="@+id/toolbar"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                android:background="@drawable/nav_background">

                <ImageView
                    android:id="@+id/menu_imageview"
                    android:layout_width="0dp"
                    android:layout_weight="0.15"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:src="@drawable/menu_icon"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:text="@string/vastu"
                    android:gravity="start"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_normal"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    app:fontFamily="@font/poppins_semibold" />

                <ImageView
                    android:id="@+id/notification_imageview"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.15"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_notification"/>
            </LinearLayout>

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/image_slider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/banner_image_height"
                app:iss_auto_cycle="true"
                app:iss_selected_dot="@drawable/default_selected_dot"
                app:iss_unselected_dot="@drawable/default_unselected_dot"
                app:iss_period="1000"
                app:iss_delay="0"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="@dimen/margin_xlarge">

                <LinearLayout
                    android:id="@+id/real_estate_layout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/dashboard_image_back"
                        android:backgroundTint="#D5EAF3"
                        android:scaleType="center"
                        android:src="@drawable/real_estate" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/real_estate"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:includeFontPadding="true"
                        app:fontFamily="@font/poppins_regular"
                        android:textSize="@dimen/text_size_normal"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/loan_layout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_height="match_parent"
                    android:backgroundTint="#F3DBDA"
                    android:background="@drawable/dashboard_image_back"
                    android:src="@drawable/loan"
                    android:scaleType="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/loan"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:includeFontPadding="true"
                    app:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/text_size_normal"/>
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>