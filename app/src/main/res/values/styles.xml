<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance" parent="Widget.Design.TextInputLayout">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="fontFamily">@font/poppins_regular</item>

        <item name="android:letterSpacing">@dimen/letterSpacing_3</item>
    </style>
    <style name="hintTextApperance" >
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColorHint">@color/black</item>
    </style>
    <style name="prefix" parent="Base.TextAppearance.AppCompat.Body2">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_semilarge</item>
        <item name="android:letterSpacing">@dimen/letterSpacing_3</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="image_custom_shape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">5%</item>
        <item name="cornerSizeTopRight">5%</item>
        <item name="cornerSizeBottomRight">5%</item>
        <item name="cornerSizeBottomLeft">5%</item>
</style>

    <style name="spinnerItemStyle">
        <item name="android:background">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="primaryColorButtonStyle">
        <item name="android:background">@drawable/round_button_background</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_55</item>
    </style>

</resources>