<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance" parent="Widget.Design.TextInputLayout">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="fontFamily">@font/open_sans_bold</item>

        <item name="android:letterSpacing">@dimen/letterSpacing_3</item>
    </style>
    <style name="hintTextApperance" >
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColorHint">@color/black</item>
    </style>
    <style name="prefix" parent="Base.TextAppearance.AppCompat.Body2">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/dimen15sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="image_custom_shape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">8%</item>
        <item name="cornerSizeTopRight">8%</item>
        <item name="cornerSizeBottomRight">8%</item>
        <item name="cornerSizeBottomLeft">8%</item>
</style>

    <style name="spinnerItemStyle">
        <item name="android:background">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="primaryColorButtonStyle">
        <item name="android:background">@drawable/round_button_background</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_55</item>
    </style>

    <style name="whiteColorButtonStyle">
        <item name="android:background">@color/white</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_55</item>
    </style>
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:maxLines">3</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/button_color</item>
    </style>
    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:maxLines">3</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/button_color</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>
    <style name="MyCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.Cut</item>
    </style>


    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
    </style>

    <style name="Tab_Menu_Details" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/button_color</item>
    </style>


    <style name="CustomRatingBarStyle" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratingbar_selector</item>
        <item name="android:minHeight">15dip</item>
        <item name="android:maxHeight">100dip</item>
    </style>
</resources>