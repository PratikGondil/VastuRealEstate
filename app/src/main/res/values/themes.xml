<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.VastuRealEstate" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:popupTheme">@style/spinnerItemStyle</item>
        <item name="buttonStyle">@style/primaryColorButtonStyle</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="floatingActionButtonStyle">@style/commonFloatingActionButton</item>
        <item name="statusBarBackground">@drawable/site_menu_bg</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimary</item>
    </style>

    <style name="Theme.prefixTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="commonFloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/commonFabStyle</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="commonFabStyle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">20%</item>
    </style>
    <style name="BottomSheetDialog" parent="">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/dimen60dp</item>
        <item name="android:background">@drawable/filter_background</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/rounded_corner</item>
    </style>

</resources>